# ==========================================
# VISA & IMMIGRATION
# ==========================================

# SherpaÂ° (Visa Requirements - TripIt)
SHERPA_API_KEY=...

# iVisa (eVisa Applications)
IVISA_API_KEY=...

# ==========================================
# TRAVEL INSURANCE
# ==========================================

# Allianz Partners
ALLIANZ_API_KEY=...

# World Nomads
WORLD_NOMADS_API_KEY=...

# SafetyWing
SAFETYWING_API_KEY=...

# ==========================================
# AI & MACHINE LEARNING
# ==========================================

# OpenAI (GPT-4 for AI Concierge)
OPENAI_API_KEY=sk-...

# Anthropic (Claude for Trip Planning)
ANTHROPIC_API_KEY=sk-ant-...

# ==========================================
# DATABASE
# ==========================================

DATABASE_URL=postgresql://user:password@localhost:5432/traveease
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==========================================
# REDIS (Caching)
# ==========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=900 # 15 minutes

# ==========================================
# AWS (S3 for document storage)
# ==========================================

AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_S3_BUCKET=traveease-documents

# ==========================================
# EMAIL (SendGrid or AWS SES)
# ==========================================

SENDGRID_API_KEY=SG....
FROM_EMAIL=noreply@traveease.com

# ==========================================
# APPLICATION
# ==========================================

NODE_ENV=development # or 'production'
PORT=3000
APP_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# ==========================================
# MONITORING & LOGGING
# ==========================================

LOG_LEVEL=info # debug, info, warn, error
SENTRY_DSN=... # Optional error tracking

# ==========================================
# FEATURE FLAGS
# ==========================================

ENABLE_BNPL=true
ENABLE_AI_CONCIERGE=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_CURRENCY_OPTIMIZATION=true

# ==========================================
# RATE LIMITING
# ==========================================

RATE_LIMIT_WINDOW_MS=60000 # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# WEBHOOK ENDPOINTS (for testing)
# ==========================================

WEBHOOK_BASE_URL=https://your-domain.com
